.container
  %p#notice
    = notice
  .overlay
  .contents_wrap
    %h1.main_frase.under_line
      All Tips
    .icon_group.under_line
      = link_to root_path, class: "icon_link" do
        %i.fas.fa-home
      = link_to tips_path, class: "icon_link" do
        %i.fas.fa-search
    .tips_list
      - @tips.each do |tip|
        .tip_wrap
          %h2.tip_title
            = link_to tip.title, tip
          %p.tip_desc
            = tip.description
          .read_btn
            = link_to 'Read More', tip_path(tip), class: "btn btn-md"
