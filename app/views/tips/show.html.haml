- set_meta_tags title: @tip.title,
                description: @tip.description,
                og: { title: :title,
                      url: request.original_url,
                      description: :description }
.container
  .contents_wrap
    %h1.main_frase
      = @tip.title
    %p.post_date
      = @tip.created_at.strftime('%Y/%m/%d')
    .icon_group
      = link_to tips_path, class: "icon_link" do
        %i.fas.fa-angle-left
    #tip_wrap.contents
      = @tip.to_html
