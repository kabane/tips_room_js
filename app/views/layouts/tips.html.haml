!!!
%html
  %head
    = csrf_meta_tags
    = csp_meta_tag
    = render :partial => "layouts/meta_tags"
    = stylesheet_link_tag 'tips/application', media: 'all'
    = javascript_include_tag 'application'
  %body{class: "#{controller.controller_name} #{controller.action_name}"}
    - if notice
      %p.notice= notice
    - elsif alert
      %p.alert= alert
    = yield
